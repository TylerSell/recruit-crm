<%= form_for @candidate do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %><br><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
    <%= f.label :address_1 %>
    <%= f.text_field :address_1 %><br><br>
    <%= f.label :address_2 %>
    <%= f.text_field :address_2 %><br><br>
    <%= f.label :city %>
    <%= f.text_field :city %><br><br>
    <%= f.label :state %>
    <%= f.text_field :state %><br><br>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br><br>
    <%= f.label :date_of_birth %>
    <%= f.text_field :date_of_birth %><br><br>
    <%= f.label :interview_date %>
    <%= f.text_field :interview_date %><br><br>
    <%= f.label :test_date %>
    <%= f.text_field :test_date %><br><br>
    <%= f.label :stage %>
    <%= f.select :stage, [['Stage 1 - Interested', 1], ['Stage 2 - Interview Set', 2], ['Stage 3 - Affidavit Sent', 3], ['Stage 4 - Voucher Sent', 4], ['Stage 5 - Studying', 5], ['Stage 6 - Test Scheduled', 6], ['Stage 7 - Sent To Contracting', 7], ['Stage 8 - Hired', 8], ['Stage 9 - Archived/Not Interested', 9], ['Stage 10 - Archived/No Contact', 10]] %><br><br>
    <%= f.label :affidavit_sent %>
    <%= f.select :affidavit_sent, [['Not Sent', false], ['Sent', true]] %><br><br>
    <%= f.label :affidavit_received %>
    <%= f.select :affidavit_received, [['Not Received', false], ['Received', true]]  %><br><br>
    <%= f.label :voucher_sent %>
    <%= f.select :voucher_sent, [['Not Sent', false], ['Sent', true]]  %><br><br>
    <%= f.label :test_passed %>
    <%= f.select :test_passed, [['Not Passed', false], ['Passed', true]]  %><br><br>
    <%= f.label :licensed %>
    <%= f.select :licensed, [['Not Licensed', false], ['Licensed', true]]  %><br><br>
    <% if is_agent? %>
        <%= f.hidden_field :agent_id, value: current_user.id %>
        <%= f.label :recruiter_id %>
        <%= f.select :recruiter_id, Recruiter.all.collect {|r| [r.first_name + ' ' + r.last_name, r.id]} %><br><br> 
    <% else %>
        <%= f.hidden_field :recruiter_id, value: current_user.id %>
        <%= f.label :agent_id %>
        <%= f.select :agent_id, Agent.all.collect {|a| [a.first_name + ' ' + a.last_name, a.id]} %><br><br>
    <% end %>
    
    <%= f.submit %>
<% end %> 