<!DOCTYPE html>
<html>
  <head>
    <title>RecruitCrm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/6396b028af.js" crossorigin="anonymous"></script>
  </head>


    

  <body class="mh-100 pb-0">
    <header class="shadow navbar navbar-light bg-white">
      <span class="navbar-brand ml-auto mb-0 h1 text-primary">Insurance Recruiter CRM</span>
    </header>
    
    <div class="container-fluid">
      <div class="row flex-xl-nowrap">
        <div class="col-md-4 col-xl-3 bg-dark">
          <nav class="bg-dark mx-1">
            <div class="container d-flex justify-content-center mt-2">
              <% if is_agent? %>
                <%= link_to "#{current_user.first_name} #{current_user.last_name}", agent_path(current_user), :class => "h3 text-white text-decoration-none" %><br>
              <% else %>
                <%= link_to "#{current_user.first_name} #{current_user.last_name}", recruiter_path(current_user), :class => "h3 text-light text-decoration-none" %>
              <% end %>
            </div>
            <div class="container d-flex justify-content-center">
              <%= link_to "Logout", logout_path, :class => "btn btn-outline-info btn-sm" %>
            </div>
            <div class="container d-flex justify-content-start mt-3">
              <h3 class="h4 text-light">Dashboard</h3>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Dashboard", candidates_path, :class => current_page?(candidates_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "New Candidate", new_candidate_path, :class => current_page?(new_candidate_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start mt-3">
              <h3 class="h4 text-light text-decoration-none">Stages</h3>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 1", stage_1_path, :class => current_page?(stage_1_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 2", stage_2_path, :class => current_page?(stage_2_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 3", stage_3_path, :class => current_page?(stage_3_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 4", stage_4_path, :class => current_page?(stage_4_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 5", stage_5_path, :class => current_page?(stage_5_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 6", stage_6_path, :class => current_page?(stage_6_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 7", stage_7_path, :class => current_page?(stage_7_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 8", stage_8_path, :class => current_page?(stage_8_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3">
              <%= link_to "Stage 9", stage_9_path, :class => current_page?(stage_9_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
            <div class="container d-flex justify-content-start ml-3 pb-2">
              <%= link_to "Stage 10", stage_10_path, :class => current_page?(stage_10_path) ? "h5 text-info text-decoration-none" : "h5 text-secondary text-decoration-none" %>
            </div>
          </nav>
        </div>

        <%= yield %>

      </div>
    </div>

  </body>
</html>