<div class="col-md-4 col-xl-5 offset-md-2 offset-xl-2 align-self-center">
    <div class="shadow card text-center">
        <h5 class="card-header"><%= @recruiter.first_name %> <%= @recruiter.last_name %></h5>
        <div class="card-body">
            <p class="card-text">
                Phone: <%= @recruiter.phone_number %><br>
